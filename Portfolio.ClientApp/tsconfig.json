{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es5",
    "lib": [
      "dom", "es5", "es6"
    ],
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules"
  ]
}